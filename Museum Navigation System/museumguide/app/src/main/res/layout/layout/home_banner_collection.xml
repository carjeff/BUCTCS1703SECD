<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLGrey"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:id="@+id/collType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_exhibition"
            android:gravity="center"
            android:text="展览"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- 设置参照物,实现平分 -->
            <View
                android:id= "@+id/strut"
                android:layout_width= "0dp"
                android:layout_height= "0dp"
                android:layout_centerInParent="true" />
            <TextView
                android:id="@+id/noColl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="这里还没有内容"
                android:textSize="20sp"
                android:gravity="center"
                android:visibility="invisible"/>
            <LinearLayout
                android:id="@+id/coll1Wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/strut"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/collImg1"
                    android:layout_width="100dp"
                    android:layout_height="170dp"/>
                <TextView
                    android:id="@+id/collName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄玉"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/coll2Wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/strut"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/collImg2"
                    android:layout_width="100dp"
                    android:layout_height="170dp"/>
                <TextView
                    android:id="@+id/collName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄玉"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
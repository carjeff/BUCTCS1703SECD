<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCollections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/search_collection_iamge"
                android:layout_width="160dp"
                android:src="@drawable/emptyimage2"
                android:background="@drawable/ic_search_exhibition"
                android:layout_height="150dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:id="@+id/search_collection_name"
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/search_collection_content"
                android:layout_width="wrap_content"
                android:height="50dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/search_collection_material"
                android:layout_width="wrap_content"
                android:text="材质"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/search_collection_tag"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/search_collection_museum"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="博物馆"
                android:layout_height="wrap_content"/>

        </LinearLayout>
</LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>